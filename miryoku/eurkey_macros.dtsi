/ {
	macros {
		compatible = "zmk,macros";

		s_caron: s_caron {
			compatible = "zmk,behavior-macro";
			label = "S Caron";
			#binding-cells = <0>;
			wait-ms = <20>;
			tap-ms = <30>;
			bindings = <
							   &macro_press &kp RALT &kp LSHFT
							   &macro_tap &kp N6
							   &macro_release &kp RALT &kp LSHFT
							   &kp S
					   >;
		};

